# Path to your oh-my-zsh installation.
export ZSH=/Users/grzegorz/.oh-my-zsh

ZSH_THEME="unijewski"

plugins=(git bundler osx rake ruby rvm)

export PATH="$PATH:$HOME/.rvm/bin:/Users/grzegorz/.bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

source $ZSH/oh-my-zsh.sh

export BUNDLER_EDITOR="code --wait"
export EDITOR="code --wait"
export NVM_DIR="$HOME/.nvm"
[ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/usr/local/opt/nvm/etc/bash_completion.d/nvm" ] && . "/usr/local/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
export TERM=xterm-256color
export VIMRC="~/.vimrc"

alias dc=docker-compose
alias dm=docker-machine

function gfr() {
  git reset --soft HEAD~1 && git restore --staged .
}
